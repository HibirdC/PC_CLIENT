FunctionEnd

;开始卸载时检查是否正在运行
Function un.onInit
    Process::FindProcess "Toon.exe"
    Pop $R0
    IntCmp $R0 1 0 no_run
    MessageBox MB_ICONSTOP "卸载程序检测到 ${PRODUCT_NAME} 正在运行，请退出程序后重试。"
    Quit
    no_run:
  MessageBox MB_ICONQUESTION|MB_YESNO|MB_DEFBUTTON2 "你确实要完全移除 $(^Name) ，其及所有的组件？" IDYES +2
  Abort
 MessageBox MB_YESNO "你是否要删除用户数据？" /SD IDYES IDYES label_yes IDNO label_no
    label_yes:
    RMDir /r "$DOCUMENTS\toon files"
    RMDir /r "$DOCUMENTS\toon-test files"
    Goto end
    label_no:
    Goto end
   end:
FunctionEnd

