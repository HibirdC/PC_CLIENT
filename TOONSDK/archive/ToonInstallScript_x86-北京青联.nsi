Name "${PRODUCT_NAME} ${PRODUCT_VERSION}"
OutFile "toon-${PRODUCT_VERSION}-32bit-${PRODUCT_DATE}.exe"
InstallDir "$PROGRAMFILES\qltoon"
InstallDirRegKey HKLM "${PRODUCT_DIR_REGKEY}" ""
ShowInstDetails show
ShowUnInstDetails show
RequestExecutionLevel admin

Function .onInit
    ReadRegStr $0 ${PRODUCT_UNINST_ROOT_KEY} "${PRODUCT_UNINST_KEY}" "DisplayVersion"
    StrCmp $0 "1.0.0" YES NO
    YES:
       RMDir /r "$DOCUMENTS\toon files"
    NO:
    
    ;开始安装时删除旧版本
    ;RMDir /r "$LOCALAPPDATA\Toon"
    Delete "$DESKTOP\toon客户端.lnk"
    Delete "$DESKTOP\toon.lnk"
    SetShellVarContext all
    ;Delete "$SMPROGRAMS\toon客户端zm\Uninstall.lnk"
    ;Delete "$SMPROGRAMS\toon客户端zm\Website.lnk"
    ;Delete "$SMPROGRAMS\toon客户端zm\toon客户端.lnk"
    RMDir /r "$SMPROGRAMS\toon客户端zm"
    RMDir "$SMPROGRAMS\toon客户端zm"
    RMDir /r "$PROGRAMFILES\toon客户端"
    
Install:
;开始安装时检查是否正在运行
Process::FindProcess "Toon.exe"
   Pop $R0
   IntCmp $R0 1 0 no_run
   MessageBox MB_OKCANCEL|MB_ICONSTOP "安装程序检测到 ${PRODUCT_NAME} 正在运行，请先退出程序后点击[确定]继续安装。" /SD IDOK IDOK label_ok IDCANCEL label_cancel
   label_ok:
   Goto Install
   label_cancel:
   Quit
   no_run:
FunctionEnd

